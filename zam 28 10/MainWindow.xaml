<Window x:Class="zam_28_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zam_28_10"
        mc:Ignorable="d"
        Title="Вычисление факториала" Height="400" Width="500">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="InputTextBox" Width="150" Margin="10" 
                 Text="Введите число"
                 GotFocus="InputTextBox_GotFocus"
                 LostFocus="InputTextBox_LostFocus"/>
        <Button x:Name="CalculateButton" Content="Вычислить факториал" 
                Width="150" Margin="10" Click="CalculateButton_Click" />
        <TextBlock x:Name="ResultTextBlock" Margin="10" FontSize="16" 
                   Text="Результат: " />
    </StackPanel>
</Window>